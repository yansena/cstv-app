{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "allowUnreachableCode": true,
    "paths": {
      "*": [
        "src/*"
      ],
      "@components": [
        "src/presentation/components/*"
      ],
      "@atoms": [
        "src/presentation/components/atoms/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
