{
  "extends": "expo/tsconfig.base",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "allowUnreachableCode": true,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@data/*": ["./src/data/*"],
      "@domain/*": ["./src/domain/*"],
      "@presentation/*": ["src/presentation/*"],
      "@components/*": ["./src/presentation/components/*"],
      "@pages/*": ["./src/presentation/pages/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./src/assets/*",
    "./src/data/*",
    "./src/domain/*",
    "./src/presentation/*"
  ]
}
